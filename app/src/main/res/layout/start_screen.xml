<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startscreen">

    <com.a461.ellen.a461snake.CustomTextView
        style="@style/textview"
        android:id="@+id/instructions"
        android:text="select number of players"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#eeefcf"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/upbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/instructions"
        android:layout_centerHorizontal="true"
        android:background="@drawable/up"
        />

    <com.a461.ellen.a461snake.CustomTextView
        style="@style/textview"
        android:id="@+id/players"
        android:text="1"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/upbutton"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_corner"

        />

    <Button
        android:id="@+id/downbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/players"
        android:layout_centerHorizontal="true"
        android:background="@drawable/down"
        />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="124dp"
        android:layout_height="75dp"
        android:layout_below="@id/downbutton"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:background="@drawable/start"
        />

</RelativeLayout>